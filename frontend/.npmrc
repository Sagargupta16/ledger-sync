# pnpm configuration
# This ensures consistent behavior across all environments

# Use node-linker=hoisted for better compatibility with React apps
# (some tools expect flat node_modules)
node-linker=hoisted

# Automatically install peer dependencies
auto-install-peers=true

# Strict peer dependencies (warn instead of error for better DX)
strict-peer-dependencies=false

# Enable better performance
prefer-frozen-lockfile=true

# Public hoist pattern for better compatibility
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=@testing-library/*

# Save exact versions (recommended for consistency)
save-exact=false

# Registry (default, but explicit is good)
registry=https://registry.npmjs.org/

# Shamefully hoist (for maximum compatibility if needed)
# shamefully-hoist=true
